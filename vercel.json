{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "ski-resort-frontend/build",
  "rewrites": [
    { "source": "/api/test", "destination": "ski_resort_finder/app.py" },
    { "source": "/api/search", "destination": "ski_resort_finder/app.py" }
  ],
  "env": {
    "FLASK_ENV": "production",
    "PYTHONPATH": "."
  }
} 