{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "ski-resort-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "ski-resort-frontend/build/$1"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "NODE_VERSION": "18.x",
    "PYTHON_VERSION": "3.9"
  }
}